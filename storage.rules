rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can only read/write their own photos
    match /profiles/{userId}/{allPaths=**} {
      // Allow read if authenticated
      allow read: if request.auth != null;

      // Allow write only to own profile folder
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }

    // Team photos - authenticated users can upload team images
    match /teams/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }

    // Tournament files - authenticated users can upload tournament images and documents
    match /tournaments/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024; // Max 10MB for documents
    }

    // Avatar defaults - public read access
    match /avatar/{allPaths=**} {
      allow read: if true; // Public read for default avatars
      allow write: if false; // Only admin can write
    }

    // Raw tournament data (tracking, etc.) - read only for authenticated users
    match /raw/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin/backend can write
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
